#include <iostream>
#include <stdlib.h>
#include <cstring>
using namespace std;
int main(void)
{
    int A[1000]{1, 2, 3, 4, 5, 6, 7, 8, 9, 0};
    int* p= A;
    int s=1000,j=0;
    while ((*(p+s-1))==0) // проверяем значение элементов массива на 0
    {
	        s=(s/2); //делим массив пополам 
    }
    while ((*(p+s-1+j))!=0)   //при встрече не 0 элемента,проверяем элементы до встречи нулевого
    {
	  j++;
    }
    cout<<"Kolichestvo nenulevih elementov = "<<s-1+j<<endl; 
    return 0;
}
