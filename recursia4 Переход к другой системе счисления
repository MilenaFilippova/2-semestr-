//Переход к другой системе счисления
//Дано натуральное число n. Вывести на экран его запись в двоичной системе счисления.
#include <iostream>
#include <stdlib.h>
#include <cstring>
using namespace std;
int sistem (int a,int *p)
{
    while(a>0)
    {
        *p=a%2; //заполнение массива двоичными числами
        p++;
        return sistem (a=a/2,p); //рекурсия 
    }
} 

int main()
{
    setlocale (LC_ALL,"Russian");
    int a,n=100,k=0;  
    int B[n]={0}; //массив для двоичных чисел
    int* p=B;
    cout<<"Введите число, которое хотите перевести в двоичную систему  "<<endl;       
    cin >>a;
    if (a>0)
    {
        cout<<"Число "<<a<<" вдвоичной системе счисления  = ";
        sistem (a,p);
        for (int i=n;i>=0;i--)  //размерность массива n ,тк при переводе плучается разное кол-во цифр
        {  
            while(k==0)         //формируем вывод без лишних нулей массива
            {
                if (B[i]==1)
                {
                    k=1;
                    cout<<B[i];
                }  
                i--;
            }
            cout<<B[i];
         }
    }
    else
    {
        cout<<"Введите число больше нуля";
    }
        return 0;
}
